---
import "../assets/styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PostCard from "../components/PostCard.astro";
import NextPrevPage from "../components/NextPrevPage.astro";
import Pagination from "../components/Pagination.astro";
import TagLink from "../components/TagLink.astro";
interface Props {
  title: string;
}

let title = Astro.props.title ? Astro.props.title : "隆海的博客";
let desc = "隆海的博客";
---

<!doctype html>
<html lang="zh-cn">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title + " - " + desc}</title>
  </head>
  <body>
    <Header />
    <div class="max-w-3xl w-full mx-auto">
      <PostCard />
      <TagLink href="/tags/astro" label="Astro" icon="🚀" color="#7b61ff" />
      <TagLink href="/tags/theme" label="Theme" icon="📦" />
      <TagLink href="/tags/stable" label="稳定运行" icon="✅" color="#4caf50" />
      <NextPrevPage />
      <Pagination />
      <slot />
    </div>
    <Footer />
  </body>
</html>
